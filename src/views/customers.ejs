<%- include("partials/_header") %>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7 col-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <th>N°</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            <th>Acción</th>
                        </thead>
                        <tbody>
                            <% if (customers) { %>
                                <% for (var i=0; i < customers.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= (i + 1) %>
                                        </td>
                                        <td>
                                            <%= customers[i].nombre %>
                                        </td>
                                        <td>
                                            <%= customers[i].direccion %>
                                        </td>
                                        <td>
                                            <%= customers[i].telefono %>
                                        </td>
                                        <td>
                                            <a href="/delete/customer/<%= customers[i].id %>" class="btn btn-danger">Eliminar</a>
                                            <a href="/update/customer/<%= customers[i].id %>" class="btn btn-success">Actualizar</a>
                                        </td>
                                    </tr>
                                    <% } %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-5 col-12">
                <div class="card">
                    <div class="card-body">
                        <form action="/add/customer" method="post">
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Ingresa tu nombre" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="direccion" placeholder="Ingresa tu dirección" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="telefono" placeholder="Ingresa tu teléfono" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar cliente</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include("partials/_footer") %>